{
  "name": "sanity",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist && npm run install",
    "build": "lerna run clean && gulp",
    "clean": "lerna run clean && lerna clean",
    "publish": "npm run build && lerna publish",
    "init": "lerna clean --yes && npm run bootstrap && npm run build",
    "start": "gulp dev",
    "storybook": "gulp storybook",
    "test": "echo 'Run `npm run test-all` to run `npm test` for every package'",
    "test-all": "lerna run test --stream",
    "updated": "lerna updated",
    "watch": "gulp watch",
    "install": "node node_modules/husky/bin/install",
    "commitmsg": "node scripts/validateCommitMessage.js",
    "versions": "node scripts/normalizeDependencyVersions.js"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-syntax-class-properties": "^6.13.0",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.23.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-register": "^6.24.0",
    "boxen": "^1.0.0",
    "chalk": "^1.1.3",
    "eslint": "^3.19.0",
    "eslint-config-sanity": "^2.1.4",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.10.0",
    "glob": "^7.1.1",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-filter": "^5.0.0",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^4.3.11",
    "husky": "^0.13.1",
    "lerna": "2.0.0-beta.38",
    "rimraf": "^2.6.1",
    "semver": "^5.3.0",
    "through2": "^2.0.3",
    "yarn": "^0.21.3"
  }
}
