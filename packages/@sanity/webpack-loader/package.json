{
  "name": "@sanity/plugin-loader",
  "version": "1.1.1",
  "description": "Plugin loader for Sanity. Resolves roles based on a declared Sanity manifest and provides infrastructure for loading the required plugins.",
  "main": "lib/roleLoader.js",
  "scripts": {
    "clean": "rimraf lib",
    "compile": "babel -d lib/ src/",
    "compile:watch": "babel -w -d lib/ src/",
    "coverage": "babel-node ./node_modules/.bin/isparta cover --report=lcov --report=text _mocha -- test/**/*.test.js",
    "posttest": "eslint .",
    "prepublish": "in-publish && npm run compile || not-in-publish",
    "test": "mocha test/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/plugin-loader.git"
  },
  "keywords": [
    "sanity",
    "webpack-loader"
  ],
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sanity-io/plugin-loader/issues"
  },
  "homepage": "https://github.com/sanity-io/plugin-loader#readme",
  "dependencies": {
    "@sanity/resolver": "1.0.0",
    "chai": "^3.5.0",
    "fs-extra": "^0.26.5",
    "fs-promise": "^0.4.1",
    "loader-utils": "^0.2.12",
    "lodash": "^4.6.1",
    "postcss": "^5.0.19",
    "promise-props-recursive": "^1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.0-beta.6",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "chai-as-promised": "^5.2.0",
    "eslint": "^2.4.0",
    "eslint-config-sanity": "^1.0.5",
    "mocha": "^2.4.5"
  }
}
