{
  "extends": "../../../tsconfig.settings",
  "include": ["./src/"],
  "exclude": [
    "./src/**/__fixtures__/*",
    "./src/**/__mocks__/*",
    "./src/**/__workshop__/*",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "composite": true,
    "declarationDir": "./lib/dts/",
    "rootDir": "./",
    "outDir": "./lib/dts/",
    // todo: we need to disable strict in a transition phase and should be removed eventually
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "jsx": "react"
  },
  "references": [
    {"path": "../base/tsconfig.lib.json"},
    {"path": "../imagetool"},
    {"path": "../portable-text-editor"},
    {"path": "../state-router/tsconfig.lib.json"},
    {"path": "../types"},
    {"path": "../util/tsconfig.lib.json"}
  ]
}
