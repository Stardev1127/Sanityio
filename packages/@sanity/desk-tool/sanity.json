{
  "plugins": [
    "@sanity/form-builder"
  ],

  "roles": [
    {
      "name": "config:desk-tool/pane-resolver",
      "description": "Function that resolves the different panes in the desk tool"
    },

    {
      "name": "style:desk-tool/styles",
      "description": "Styling for the desk tool"
    },

    {
      "implements": "config:desk-tool/pane-resolver",
      "srcPath": "./src/schemaPaneResolver.js",
      "path": "./lib/schemaPaneResolver.js"
    },

    {
      "implements": "style:desk-tool/styles",
      "name": "style:desk-tool/default",
      "path": "./styles/DeskTool.css"
    },

    {
      "implements": "tool:@sanity/base/tool",
      "srcPath": "./src/",
      "path": "./lib/"
    },

    {
      "name": "component:desk-tool/pane-container",
      "srcPath": "./src/pane/PaneContainer.js",
      "path": "./lib/pane/PaneContainer.js"
    },

    {
      "name": "component:desk-tool/pane",
      "srcPath": "./src/pane/Pane.js",
      "path": "./lib/pane/Pane.js"
    },

    {
      "name": "component:desk-tool/query-pane",
      "srcPath": "./src/pane/QueryPane.js",
      "path": "./lib/pane/QueryPane.js"
    },

    {
      "name": "component:desk-tool/editor-container",
      "srcPath": "./src/editor/EditorContainer.js",
      "path": "./lib/editor/EditorContainer.js"
    }
  ]
}
