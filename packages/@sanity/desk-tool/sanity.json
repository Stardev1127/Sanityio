{
  "paths": {
    "source": "./src",
    "compiled": "./lib"
  },

  "plugins": [
    "@sanity/form-builder",
    "@sanity/data-aspects"
  ],

  "roles": [
    {
      "name": "config:desk-tool/pane-resolver",
      "description": "Function that resolves the different panes in the desk tool"
    },

    {
      "name": "style:desk-tool/styles",
      "description": "Styling for the desk tool"
    },

    {
      "implements": "config:desk-tool/pane-resolver",
      "path": "SchemaPaneResolver.js"
    },

    {
      "implements": "style:desk-tool/styles",
      "name": "style:desk-tool/default",
      "path": "./styles/DeskTool.css"
    },

    {
      "implements": "tool:@sanity/base/tool",
      "path": "index.js"
    },

    {
      "name": "component:desk-tool/pane-container",
      "path": "pane/PaneContainer.js"
    },

    {
      "name": "component:desk-tool/pane",
      "path": "pane/Pane.js"
    }
  ]
}
